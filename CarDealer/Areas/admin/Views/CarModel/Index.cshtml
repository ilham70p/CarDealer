@model List<CarModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

<a class="btn btn-primary" asp-area="admin" asp-controller="CarModel" asp-action="create">Create</a>
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Brand</th>
            <th scope="col">Name</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <th scope="row">@item.Id</th>
            <td>@item.Brand.Name</td>
            <td>@item.Name</td>
            <td><a type="button" class="btn btn-success" asp-route-id="@item.Id" asp-area="admin" asp-controller="CarModel" asp-action="update">Update</a></td>
            <td><a type="button" class="btn btn-danger" asp-route-id="@item.Id" onclick="return confirm('Are you sure?')" asp-area="admin" asp-controller="CarModel" asp-action="delete">Delete</a></td>

        </tr>
        }


    </tbody>
</table>

