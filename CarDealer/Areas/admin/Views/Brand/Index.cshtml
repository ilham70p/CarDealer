@model List<Brand>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}
<a  class="btn btn-primary" asp-area="admin" asp-controller="Brand" asp-action="create">Create</a>
<table class="table">
<thead>
    <tr>
        <th scope="col">#</th>
        <th scope="col">Image</th>
        <th scope="col">Name</th>

    </tr>
</thead>
<tbody>
    @foreach (var item in Model)
    {
    <tr>
        <th scope="row">@item.Id</th>
        <td><img src="~/Uploads/@item.ImageName" alt="Alternate Text" style="max-width:100px" /></td>
        <td>@item.Name</td>
        <td><a asp-area="admin" asp-controller="Brand" asp-action="update" type="button" class="btn btn-success" asp-route-id="@item.Id">Update</a></td>
        <td><a asp-controller="Brand" asp-area="admin" asp-action="delete" asp-route-id="@item.Id" onclick="return confirm('Are you sure?')" type="button" class="btn btn-danger">Delete</a></td>

    </tr>
    }

  
</tbody>
</table>

