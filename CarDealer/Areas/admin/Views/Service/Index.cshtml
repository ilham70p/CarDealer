@model List<Service>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

<a class="btn btn-primary" asp-area="admin" asp-controller="Service" asp-action="create" >Create</a>
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Image</th>
            <th scope="col">Title</th>
            <th scope="col">Description</th>


        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td><img src="~/Uploads/@item.ImageName" alt="Alternate Text" style="max-width:100px" /></td>
                <td>@item.Title</td>
                <td>@(item.Description.Length>150? item.Description.Substring(0,150):item.Description)</td>
            


                <td><a asp-area="admin" asp-controller="Service" asp-action="update" type="button" class="btn btn-success" asp-route-id="@item.Id">Update</a></td>
                <td><a asp-area="admin" asp-controller="Service" asp-action="delete" type="button" class="btn btn-danger" asp-route-id="@item.Id" onclick="return confirm('Are you sure?')">Delete</a></td>

            </tr>
        }


    </tbody>
</table>

