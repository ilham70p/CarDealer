@model Service
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}
<form asp-area="admin" asp-controller="Service" asp-action="create" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="@Model.Title">Blog Image</label>
        <input type="file" class="form-control" asp-for="@Model.ImageFile">
        <label asp-for="@Model.Title">Blog Name</label>
        <input class="form-control" asp-for="@Model.Title">
        <label asp-for="@Model.Description">Blog Description</label>
        <input class="form-control" asp-for="@Model.Description">
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>


