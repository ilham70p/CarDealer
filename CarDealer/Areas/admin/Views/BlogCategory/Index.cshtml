@model List<BlogCategory>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

<a class="btn btn-primary" asp-area="admin" asp-controller="BlogCategory" asp-action="Create">Create</a>
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Name</td>
                <td><a type="button" asp-controller="BlogCategory" asp-action="update" asp-area="admin" class="btn btn-success" asp-route-id="@item.Id">Update</a></td>
                <td><a asp-area="admin" asp-controller="BlogCategory" asp-action="delete" type="button" class="btn btn-danger" asp-route-id="@item.Id" onclick="return confirm('Are you sure?')">Delete</a></td>

            </tr>
        }


    </tbody>
</table>

