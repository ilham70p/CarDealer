@model List<Dealer>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

<a class="btn btn-primary" asp-area="admin" asp-controller="Dealer" asp-action="create">Create</a>
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Image</th>
            <th scope="col">Name</th>
            <th scope="col">Description</th>
            <th scope="col">Email</th>
            <th scope="col">Mobile</th>
            <th scope="col">WhatsApp</th>
            <th scope="col">Location</th>




        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <th scope="row">@item.Id</th>
            <td><img src="~/Uploads/@item.ImageName" alt="Alternate Text" style="max-width:100px" /></td>
            <td>@item.Name</td>
            <td>@(item.Description.Length>150? item.Description.Substring(0,150):item.Description)</td>
            <td>@item.Email</td>
            <td>@item.Mobile</td>
            <td>@item.WhatsApp</td>
            <td>@item.Location</td>



            <td><a type="button" class="btn btn-success" asp-route-id="@item.Id" asp-area="admin" asp-controller="Dealer" asp-action="update">Update</a></td>
            <td><a type="button" class="btn btn-danger" asp-route-id="@item.Id" asp-area="admin" asp-controller="Dealer" asp-action="delete" onclick="return confirm('Are you sure?')">Delete</a></td>

        </tr>
        }


    </tbody>
</table>

