@model Dealer
@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

<form asp-area="admin" asp-controller="Dealer" asp-action="update" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <img src="~/Uploads/@Model.ImageName" alt="Alternate Text" width="100px" />


        <label asp-for="@Model.ImageFile">Dealer Image</label>
        <input type="file" class="form-control" asp-for="@Model.ImageFile">
        <label asp-for="@Model.Name">Dealer Name</label>
        <input class="form-control" asp-for="@Model.Name">

        <label asp-for="@Model.Email">Dealer Email</label>
        <input class="form-control" asp-for="@Model.Email">
        <label asp-for="@Model.Mobile">Dealer Phone</label>
        <input class="form-control" asp-for="@Model.Mobile">
        <label asp-for="@Model.WhatsApp">Dealer Whatsapp</label>
        <input class="form-control" asp-for="@Model.WhatsApp">
        <label asp-for="@Model.Location">Dealer Location</label>
        <input class="form-control" asp-for="@Model.Location">
        <label asp-for="@Model.Description">Dealer Description</label>
        <input class="form-control" asp-for="@Model.Description">



        <input class="form-control" asp-for="@Model.Id" hidden>
        <input class="form-control" asp-for="@Model.ImageName" hidden>

    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>


