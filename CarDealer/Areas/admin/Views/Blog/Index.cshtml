@model List<Blog>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

<a class="btn btn-primary" asp-controller="Blog" asp-action="Create" asp-area="admin">Create</a>
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Image</th>
            <th scope="col">Title</th>
            <th scope="col">Description</th>
            <th scope="col">Category</th>


        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <th scope="row">@item.Id</th>
            <td><img src="~/Uploads/@item.ImageName" alt="Alternate Text" style="max-width:100px" /></td>
            <td>@item.Title</td>
            <td>@(item.Descriptoin.Length>150? item.Descriptoin.Substring(0,150):item.Descriptoin)</td>
            <td>@item.BlogCategory.Name</td>


            <td><a type="button" asp-area="admin" asp-controller="Blog" asp-action="update" class="btn btn-success" asp-route-id="@item.Id">Update</a></td>
            <td><a type="button" class="btn btn-danger" asp-controller="Blog" asp-action="delete" asp-route-id="@item.Id" onclick="return confirm('Are you sure?')">Delete</a></td>

        </tr>
        }


    </tbody>
</table>

